#:import MapView kivy.garden.mapview.MapView

<WindowManager>:
    RoutesIndexWindow:
        id: screen1
        name: "routesindexwindow"
    RouteMap:
        id: screen2
        name: "routemap"
        dag: screen1.dagindexwindow
        
<RoutesIndexWindow>:
    BoxLayout:
        orientation:'vertical'
        
        BoxLayout:
            size_hint:(1,0.2)
            Label:
                text:"Paastocht 2021 routes"
                font_size:48
                bold:True
                size_hint:(.8,1)
            Image:
                source:'../Icon.png'
                size_hint_y:1
                allow_stretch:True
                size_hint:(.2,1)
        BoxLayout:
            orientation:'vertical'
            Button:
                text:"Dag 1"
                font_size:36
                on_release:
                    root.btn1_pressed()
                    app.root.current = "routemap"
                    root.manager.transition.direction = "left" 
            Button:
                text:"Dag 2"
                font_size:36
                on_release:
                    root.btn2_pressed()
                    app.root.current = "routemap"
                    root.manager.transition.direction = "left" 
            Button:
                text:"Dag 3"
                font_size:36
                on_release:
                    root.btn3_pressed()
                    app.root.current = "routemap"
                    root.manager.transition.direction = "left" 
            Button:
                text:"Dag 4 kort"
                font_size:36
                on_release:
                    root.btn4a_pressed()
                    app.root.current = "routemap"
                    root.manager.transition.direction = "left" 
            Button:
                text:"Dag 4 lang"
                font_size:36
                on_release:
                    root.btn4b_pressed()
                    app.root.current = "routemap"
                    root.manager.transition.direction = "left" 
            Button:
                text:"Dag 5"
                font_size:36
                on_release:
                    root.btn5_pressed()
                    app.root.current = "routemap"
                    root.manager.transition.direction = "left" 
            Button:
                text:"Dag 6"
                font_size:36
                on_release:
                    root.btn6_pressed()
                    app.root.current = "routemap"
                    root.manager.transition.direction = "left" 
<RouteMap>:
    FloatLayout:
        MapView:
            id:mapview
            zoom: 6
            double_tap_zoom: True
            MapMarkerPopup:
                source:'../blue_gps_dot.png'
                id: gps_tracker
            MapMarkerPopup:
                id:start_marker
                #lat:50.2240061
                #lon:5.7321618
                Label:
                    id:label_start_marker
                    #text: 'Eind dag 1'
                    color: 0,0,0,1
                    font_size: 24
                    bold: True
            MapMarkerPopup:
                id:eind_marker
                #lat:50.134042
                #lon:5.761925
                Label:
                    id:label_eind_marker
                    #text: 'Eind dag 1'
                    color: 0,0,0,1
                    font_size: 24
                    bold: True
                
                
